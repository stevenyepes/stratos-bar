{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StratosBar",
  "version": "0.1.1",
  "identifier": "com.stvcloud.stratosbar",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "StratosBar",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "$HOME/.local/share/icons/**",
          "$HOME/.steam/**",
          "/usr/share/icons/**",
          "/usr/share/pixmaps/**",
          "/opt/**",
          "$HOME/**",
          "$HOME/.*/**"
        ],
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}